FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json ./

# Install dependencies (使用 npm install 代替 npm ci)
RUN npm install

# Copy the rest of the application
COPY . .

# Expose port 5173 (Vite default dev server port)
EXPOSE 5173

# Start development server with host set to 0.0.0.0 to allow external access
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]